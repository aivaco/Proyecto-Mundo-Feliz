  
<!DOCTYPE html>
<html>

<header class="navbar navbar-fixed-top navbar-inverse">

	<%= stylesheet_link_tag 'application', media: 'all',
	'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>


	<div class="container">

		<a id="nombre_proyecto" href="home">Mundo Feliz</a>

		<nav>
			<ul class="nav navbar-nav navbar-right">
				<%= render 'layouts/menus/menu_user' %>
			</ul>
		</nav>

	</div>


</header>

<body>



	<div id="menu_tabs" class="container">
		<ul class="nav nav-tabs">
			<li class="active"><a data-toggle="tab" href="#opcion_cliente"><span class="glyphicon glyphicon-book"></span> Clientes</a></li>
			<li><a data-toggle="tab" href="#opcion_portafolio"><span class="glyphicon glyphicon-briefcase"></span> Portafolio</a></li>
			<li><a data-toggle="tab" href="#opcion_entregables"><span class="glyphicon glyphicon-file"></span> Entregables</a></li>
			<li><a data-toggle="tab" href="#opcion_recursos"><span class="glyphicon glyphicon-user"></span> Recursos</a></li>
			<li><a data-toggle="tab" href="#opcion_bitacora"><span class="glyphicon glyphicon-edit"></span> Bitácora</a></li>
		</ul>



	</div>

	<nav class="navbar navbar-default">
		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="opciones_modulo_cliente">

			<div class="navbar-header">
				<a class="navbar-brand" href="#"> <%= @cliente[:nombreEmp] %> </a>
			</div>

			<div>
				
				<ul class="nav navbar-nav">
					<%= link_to 'Nuevo Cliente', {:controller => 'modulo_cliente', :action => 'nuevo_cliente'},  {:class => 'btn btn-default navbar-btn'} %> 

					<%= link_to 'Actualizar Proyectos', {:controller => 'modulo_cliente', :action => 'actualizar_proyectos'},  {:class => 'btn btn-default navbar-btn'} %> 

					<%= link_to 'Ver Lista de Clientes', {:controller => 'modulo_cliente', :action => 'lista_clientes'},  {:class => 'btn btn-default navbar-btn'} %> 

				</ul>

				

				<div>
					<%= form_for(:buscarCliente, url: formBuscarCliente_path, html: {class: 'navbar-form navbar-right'} ) do |f| %>

					<div class="input-group">

						<%= f.text_field :cliente, class: 'form-control', placeholder: 'Buscar Cliente' %> 


						<span class="input-group-btn">

							<%= f.submit "Buscar", class: "btn btn-default" %> 
						</span>
						<% end %>

					</div>
				</div>

<div class="results" id="cliente-search-results"></div>
			</div>

		</div> <!-- /.navbar-collapse -->
	</nav>

	<h4>
		Nombre: <%= @cliente[:nombreEmp] %> <br>

		Ubicación:  <%= @cliente[:ubicacion] %> <br>
		Contacto:  <%= @cliente[:contacto] %> <br>
		Email:  <%= @cliente[:email] %> <br>
		Teléfono: <%= @cliente[:telefono] %> <br><br>

	</h4>

	<div class="row">
		<div class="col-sm-4">

			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a data-toggle="collapse" href="#collapse1">Lista de Proyectos</a>
						</h4>
					</div>
					<div id="collapse1" class="panel-collapse collapse">
						<div class="panel-body">
							<ul class="list-group">
								<% @listaProyectos.each do |proyecto| %>
								<li class="list-group-item"> <%= link_to proyecto[:nombre], { :action => 'modulo_cliente', :idProyecto => proyecto[:id], :idCliente => @cliente[:id] } %> </li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>

		</div>

		<div class="col-sm-8">

			<table id="tabla" class="table table-striped table-bordered">

				<tbody>
					<tr>
						<td>Nombre del proyecto</td>
						<td> <%= @proyecto[:nombre] %> </td>
					</tr>
					<tr>
						<td>Razón</td>
						<td> <%= @proyecto[:razon] %> </td>

					</tr>
					<tr>
						<td>Tiempo Definido</td>
						<td> <%= @proyecto[:tiempo] %> </td>

					</tr>
					<tr>
						<td> Costo </td>
						<td> <%= @proyecto[:costo] %> </td>

					</tr>
				</tbody>
			</table>

		</div>

	</div>




	<%= render 'layouts/footer' %>
</body>

</html>


<script>
					$(function() {
						new app.Autocompletar;
					});
				</script>
