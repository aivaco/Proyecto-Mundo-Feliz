<!--#Presenta todo el formato de la página para iniciar sesión.-->

<div class = "login">
<div class ="row">
<div class="col-md-6 col-md-offset-3">


      

<div class = "big">
    
  <h1>Mundo Feliz</h1>
</div>

<h1>Inicio de Sesión</1>
<br>


<!--Crea el formulario de la página.-->
<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :"Usuario:" %>
  <%= f.text_field :usuario, class: 'form-control'%>
  <%= f.label :"Contraseña:" %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= f.label :remember_me, class: "checkbox inline" do %>
  <%= f.check_box :remember_me %>
  <span>Recordarme</span>
  <i><div class=font-size: 0.5em>
  <%= link_to "Olvidé mi contraseña", new_password_reset_path %>
  </i></div>
  <% end %>
  <%= f.submit "Iniciar sesión", class: "btn btn-success" %>
  <%= link_to "/auth/facebook", id: "sign_in" do %>
  <div class="btn btn-facebook"> 
  <i class="fa fa-facebook"></i> | Sign in with Facebook
  </div>
  <% end %>
  <%= button_to_with_icon("callto://mundoFeliz",' | Soporte en vivo', 'btn-skype', 'fa fa-skype')%>
  

<% end %>


<br>



</div>
</div>
</div>