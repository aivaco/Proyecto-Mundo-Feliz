<body>

  <%= render 'layouts/header' %>
  
  <div class= "login">

<div class="row">

  <div class="col-md-6 col-md-offset-3">
<h1>Olvidé mi contraseña</h1>
    <%= form_for(:password_reset, url: password_resets_path) do |f| %><%#(Persona.new), url: {action: "create"} do |f| %>
      <%= f.label :usuario %>
      <%= f.email_field :usuario, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

  <%= render 'layouts/footer' %>
</div>
</div>
</body>